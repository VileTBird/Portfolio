<h1>Edit Blog Post</h1>
<form method="post">
    <fieldset>
        <label for="title">Title: *</label>
        <input name="title" id="title" required value="{{blog.title}}" />
    </fieldset>
    <fieldset>
        <label for="content">Content: *</label>
        <textarea name="content" id="content" required>{{blog.content}}</textarea>
    </fieldset>
    <fieldset>
        <label for="author">Author: *</label>
        <input name="author" id="author" required value="{{blog.author}}" />
    </fieldset>
    <fieldset>
        <label for="tags">Tags (comma separated): </label>
        <input name="tags" id="tags" value="{{blog.tags}}" />
    </fieldset>
    <button class="btn btn-primary offset-2">Save</button>
</form>
